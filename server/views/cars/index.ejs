<%- include ("../partials/header.ejs"); %>
<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Favourite Cars List</h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="/cars/add" class="btn btn-primary"
        ><i class="fa fa-plus"></i> Add a car</a
      >
      <br />
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Car Name</th>
              <th class="text-center">Car Model</th>
              <th class="text-center">Category</th>
              <th class="text-center">Price</th>
              <th class="text-center"></th>
               </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < cars.length; count++) { %>
            <tr>
              <td><%= cars[count].Carname %></td>

              <td class="text-center"><%= cars[count].Category %></td>
              <td class="text-center"><%= cars[count].Carmodel %></td>
              <td class="text-center"><%= cars[count].Price %></td>

              <td class="text-center">
                <p><a href="/cars/details/<%=cars[count]._id%>" class="btn btn-primary btn-sm"><i class="fas fa-pencil-alt"></i> Edit</a></p>
              </td>
              <td class="text-center">
              <p><a href="/cars/delete/<%=cars[count]._id%>" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Delete</a></p>
              </td>
            </tr>
            <% } %>
            <form action="/cars/delete" method="get">
            <tr>
              <td><p><label for="Carname">Car Name</label></p></td>
              <td>                    <p><input type="Carname"
                id="Carname"
                name="Carname"
                class="form-control"
                placeholder="Enter Car Name"
                value=""
                 /></p></td>
              <td><p><label for="Price">Price</label></p></td>
              <td><p><input
                type="number"
                id="Price"
                name="Price"
                class="form-control"
                placeholder="Enter Price"
                value=""
                /></p></td>
              <td> <button type="submit" class="btn btn-warning btn-sm btn-block">
                <i class="fas fa-trash"></i> Delete</td>
            </tr>
          </form>
          </tbody>
        </table>
      </div>
      <!-- ------------------------ -->
                <!--FIX the DELETE BUTTON HERE -->
                <!-- ------------------------ -->
     
    </main>
      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
      
    </div>
  </div>
</div>

<%- include ("../partials/footer.ejs"); %>
