<div><h1></h1></div>
<div class="card-body d-flex flex-column col-md-8 align-items-center bgcolor-light" style="border:1px solid  #b8860b">
  <h4 class="logotext"></h4> 
          
<div class="container">
    <div class="card-body d-flex flex-column align-items-center bgcolor-light">
      <div>
        <h1 class="text-center mb-3 logotext"><i class="fas fa-user-plus"></i> Add New Favorite Car </h1>
          <form action="/cars/add" method="POST">
            
              <div class="container" >
                <div class="form-group">
                <div class="row">
                  <div class="col-sm-2">
                    <p><label for="Carname">Car Name</label></p>
                  </div>
                  <div class="col-sm-6">
                    <p><input type="Carname"
                              id="Carname"
                              name="Carname"
                              class="form-control"
                              placeholder="Enter Car Name"
                              value="<%= typeof Carname != 'undefined' ? Carname : '' %>"
                              required /></p>
                  </div>
                </div>
                </div>
                <div class="form-group">
                <div class="row">
                  <div class="col-sm-2">
                    <p><label for="Category">Category</label></p>
                  </div>
                  <div class="col-sm-6">
                    <p><input
                              type="Category"
                              id="Category"
                              name="Category"
                              class="form-control"
                              placeholder="Enter Category"
                              value="<%= typeof Category != 'undefined' ? Category : '' %>"
                              required/></p>
                  </div>
                  </div>
                  </div>
                  <div class="form-group">
                  <div class="row">
                    <div class="col-sm-2">
                      <p><label for="Carmodel">Car Model</label></p>
                    </div>
                    <div class="col-sm-6">
                      <p>  <input
                                type="Carmodel"
                                id="Carmodel"
                                name="Carmodel"
                                class="form-control"
                                placeholder="Enter Carmodel"
                                value="<%= typeof Carmodel != 'undefined' ? Carmodel : '' %>"
                                required /></p>
                    </div>
                    </div>
                    </div>
                    <div class="form-group">
                    <div class="row">
                      <div class="col-sm-2">
                          <p><label for="Price">Price</label></p>
                      </div>
                      <div class="col-sm-6">
                          <p><input
                                    type="number"
                                    id="Price"
                                    name="Price"
                                    class="form-control"
                                    placeholder="Enter Price"
                                    value="<%= typeof Price != 'undefined' ? Price : '' %>"
                                    required/></p>
                      </div>
                      </div>
                      </div>
                      <div class="form-group">
                      <div class="row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-6"><div class="col-sm-4">
                       <button type="submit" class="btn btn-primary btn-block"><i class="fa-regular fa-pen-to-square"></i> Add New Car</button></div><div class="col-sm-2">
                        <a href="" class="btn btn-warning"><i class="fas fa-undo"></i>Reset</a></div>
                        </div>
                      </div>
                      </div>
                      
                 </form>
              
            </div>
          </div>
      </div>
